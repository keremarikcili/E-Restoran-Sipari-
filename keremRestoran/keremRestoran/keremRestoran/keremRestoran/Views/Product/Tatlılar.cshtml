@model keremRestoran.Models.RestoranUserÜrünContainer;

@{
    ViewData["Title"] = "Tatlılar";
}



<body>
    <div class="col-md-12">
        <div class="panel panel-info">
            <h3 class="bg">Tatlılar</h3>
            <div class="panel-body">
                <div class="row">
                    @foreach (var product in Model.RestoranUserÜrünList)
                    {
                    <div class="col-md-4 col-sm-4 col-lg-4">
                        <img src="@product.GetPath()" class="img-responsive"  />
                        <div class="text-info">@product.Name</div>
                        <div class="text-info">@product.Price TL</div>
                        <div class="text-info">@product.tanım TL</div>
                        <a asp-controller="User" asp-action="AddProductToCart" asp-route-id="@product.Id" asp-route-userId="@Model.user.Id" class="btn btn-info float-right">Sepete Ekle</a>
                        <a asp-controller="User" asp-action="DecProductToCart" asp-route-id="@product.Id" asp-route-userId="@Model.user.Id" class="btn btn-info btn-danger glyphicon-align-left">Sepetten Çıkar</a>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>



